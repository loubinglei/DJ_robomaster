#ifndef EEPROM_API_H_
#define EEPROM_API_H_


#define IIC_SCLK_RATE		300000  //100Khz
#define IIC_SLAVE_ADDR		0x68   //the address of MPU6050
//#define IIC_SLAVE_ADDR		0xE8   //the address of MPU6050

#define TEST_BUFFER_SIZE	10

int IIC_Init(void);
