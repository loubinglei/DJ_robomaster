#include "main.h"

void BSP_Init(void)
{
	NVIC_PriorityGroupConfig(NVIC_PriorityGroup_2);   //中断控制器   
	PWM_Configuration();															//PWM
	Led_Configuration(); 															//LED灯           
	Laser_Configuration(); 														//激光
	TIM2_Configuration();															//定时器
	MPU6050_Initialize();    													//MPU6050
	TIM6_Configuration();															//定时器
	Quad_Encoder_Configuration();											//正交解码
	CAN1_Configuration();           									//CAN总线1
	CAN2_Configuration();           									//CAN总线2
	USART1_Configuration(100000);     								//串口1   
	USART3_Configuration();          									//串口3
	TIM6_Start();   	               									//定时器  
	MPU6050_IntConfiguration();       								//MPU6050
	MPU6050_EnableInt();    			    								//MPU6050
	Encoder_Start();			       		 									//解码
}

